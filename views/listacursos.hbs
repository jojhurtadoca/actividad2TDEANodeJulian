    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="modalDetalleTitulo"></h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="displayInline"><span class="spanTitle">Id: </span><p class="displayInline" id="id"></p></p>
        <p class="displayInline"><span class="spanTitle">Nombre: </span><p class="displayInline" id="nombre"></p></p>
        <p class="displayInline"><span class="spanTitle">Modalidad: </span><p class="displayInline" id="modalidad"></p></p>
        <p class="displayInline"><span class="spanTitle">Disponible: </span><p class="displayInline" id="disponible"></p></p>
        <p class="displayInline"><span class="spanTitle">Valor: </span><p class="displayInline" id="valor"></p></p>
        <p class="displayInline"><span class="spanTitle">Descripci√≥n: </span><p class="displayInline" id="descripcion"></p></p>
        <p class="displayInline"><span class="spanTitle">Intensidad: </span><p class="displayInline" id="intensidad"></p></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
